{{#if resume.work.length}}
  <div class="container work-container">
    {{> title value="Work Experience"}}

    {{#each resume.work}}
      <section class="item">
        {{#if name}}
          {{> section-header name=this.name}}
        {{/if}}
        {{#if company}}
          {{> section-header name=this.company }}
        {{/if}}

        {{#if position}}
          <h4>{{position}}</h4>
        {{/if}}

        {{#if keywords.length}}
          <div class="flex-container">
            {{#each keywords}}
              <h6 class="skill">{{.}}</h6>
            {{/each}}
          </div>
        {{/if}}

        {{#if summary}}
          <p class="summary">{{summary}}</p>
        {{/if}}

        {{#if highlights.length}}
          <div class="col-container">
            <div class="col-keyline">
            </div>
            <ul class="col">
              {{#each highlights}}
              <li>{{.}}</li>
              {{/each}}
            </ul>
          </div>
        {{/if}}
      </section>
    {{/each}}
  </div>
{{/if}}
