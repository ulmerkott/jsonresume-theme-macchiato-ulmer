{{#if network}}
    {{#if username}}
        {{#is (lowercase network) "linkedin"}}
            {{> info-tag text=(concat this.network ' / ' this.username) icon="fa-linkedin-square" }}
        {{else}}
             {{> info-tag text=(concat this.network ' / ' this.username) icon=(concat "fa-" (lowercase network)) }}
        {{/is}}
    {{/if}}
{{/if}}
