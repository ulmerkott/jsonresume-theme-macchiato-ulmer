{{#if resume.interests.length}}
    <div class="container interests-container">
        {{> title value="Interests"}}

        {{#each resume.interests}}
            <section class="item">
                {{#if name}}
                    <h4 class="bold">{{name}}</h4>
                {{/if}}
                {{#if keywords.length}}
                    <div class="minimal flex-container">
                        {{#each keywords}}
                            <h6 class="main-skill skill">{{.}}</h6>
                        {{/each}}
                    </div>
                {{/if}}
            </section>
        {{/each}}
    </div>
{{/if}}